{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "execMap": {
    "js": "node"
  },

  "runOnChangeOnly": false,
  "watch": [
    "src/**/*.js",
    "src/**/*.graphql",
    "src/**/*.gql",
    "src/**/*.html",
    "src/**/*.css"
  ],
  "ext": "js,json,graphql,html,css"
}
